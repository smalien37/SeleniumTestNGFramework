<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
	
	<!-- If we want to run all the methods at once we need to put parallel="methods"-->
	<!-- The thread-count gives us the ability that at a time maximum 5 methods can run parallely-->
	<listeners>
		<listener class-name="somoCompany.TestComponents.Listeners"></listener>
	</listeners>
	
  <test thread-count="1" name="Check Only Tests">
	  
    <classes>
      <class name="somoCompany.Tests.ErrorValidationsTest"/> 
    </classes>
    
  </test> <!-- Test -->
</suite> <!-- Suite -->